# Laravel Application Configuration
APP_NAME="Cannabis POS System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=cannabis_pos
DB_USERNAME=root
DB_PASSWORD=

# Cache Configuration
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Redis Configuration (optional)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (for S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration (for real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Cannabis POS Specific Configuration
CANNABIS_TAX_RATE=0.20
CANNABIS_STATE=OR
CANNABIS_LICENSE_NUMBER=
CANNABIS_FACILITY_NAME="Cannabis Dispensary"

# METRC Integration (Oregon Cannabis Tracking)
METRC_ENVIRONMENT=sandbox
METRC_FACILITY_LICENSE=
METRC_USER_API_KEY=
METRC_VENDOR_API_KEY=
METRC_BASE_URL=https://api-or.metrc.com

# Age Verification
MIN_AGE_RECREATIONAL=21
MIN_AGE_MEDICAL=18
REQUIRE_ID_VERIFICATION=true

# Oregon Possession Limits (in grams unless specified)
OREGON_LIMIT_FLOWER=56.7
OREGON_LIMIT_CONCENTRATES=10
OREGON_LIMIT_EDIBLES=454
OREGON_LIMIT_CLONES=4

# Payment Processing
PAYMENT_PROCESSOR=stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
SQUARE_APPLICATION_ID=
SQUARE_ACCESS_TOKEN=

# Loyalty Program
LOYALTY_ENABLED=true
LOYALTY_POINTS_PER_DOLLAR=1
LOYALTY_BRONZE_THRESHOLD=0
LOYALTY_SILVER_THRESHOLD=500
LOYALTY_GOLD_THRESHOLD=2000
LOYALTY_PLATINUM_THRESHOLD=5000

# Printing
RECEIPT_PRINTER_ENABLED=true
LABEL_PRINTER_ENABLED=true
PRINTER_IP_ADDRESS=192.168.1.100

# Analytics & Reporting
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=
METABASE_SITE_URL=
METABASE_SECRET_KEY=

# Security
SESSION_TIMEOUT=480
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=8

# API Rate Limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_PER_MINUTE=true

# File Storage
STORAGE_DISK=local
MAX_UPLOAD_SIZE=10240
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,csv

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_DISK=s3

# Demo/Development
DEMO_MODE=false
SEED_SAMPLE_DATA=true
DEBUG_TOOLBAR=false

# Third Party Integrations
TWILIO_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

MAILCHIMP_API_KEY=
MAILCHIMP_LIST_ID=

SLACK_WEBHOOK_URL=

# Custom Ping Message (for API testing)
PING_MESSAGE="Cannabis POS API is online"
